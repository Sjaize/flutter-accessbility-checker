{
  "publisher": "my-publisher",
  "name": "flutter-accessibility-checker",
  "displayName": "Flutter Accessibility Checker",
  "description": "VS Code extension for Flutter accessibility analysis and code suggestions",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:flutter-accessibility.startAnalysis"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "flutter-accessibility.startAnalysis",
        "title": "Start Accessibility Analysis",
        "category": "Flutter Accessibility"
      },
      {
        "command": "flutter-accessibility.stopAnalysis",
        "title": "Stop Accessibility Analysis",
        "category": "Flutter Accessibility"
      },
      {
        "command": "flutter-accessibility.showReport",
        "title": "Show Analysis Report",
        "category": "Flutter Accessibility"
      },
      {
        "command": "flutter-accessibility.analyzeLabels",
        "title": "Analyze Labels Only",
        "category": "Flutter Accessibility"
      },
      {
        "command": "flutter-accessibility.openReactApp",
        "title": "Open React Dashboard",
        "category": "Flutter Accessibility"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "flutter-accessibility.startAnalysis",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "flutter-accessibility.stopAnalysis",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "flutter-accessibility.showReport",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "flutter-accessibility.analyzeLabels",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "flutter-accessibility.openReactApp",
          "when": "workspaceFolderCount > 0"
        }
      ]
    }
  },
  "dependencies": {
    "dotenv": "^16.3.1"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -w -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.80.0",
    "@vscode/test-electron": "^2.3.4",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0"
  }
}
